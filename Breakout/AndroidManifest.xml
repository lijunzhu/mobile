<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unimel.breakout"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.unimel.breakout.WelcomeActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="DownloadActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.unimel.breakout.DownloadActivity" />

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="GameActivity" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.unimel.breakout.GameActivity" />

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="LeaderboardActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.unimel.breakout.LeaderboardActivity" />

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="HelpActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.unimel.breakout.HelpActivity" />

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>
    

</manifest>
